<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/vue/2.5.13/vue.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pusher/4.2.2/pusher.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/axios/0.17.1/axios.js"></script>
    <title> Nest.Js </title>

    <style>
        body {
            padding-top: 50px;
        }
    </style>

</head>

<body>

    <nav class="navbar navbar-default" role="navigation">
        <div class="container-fluid">

            <div class="navbar-header">
                <a class="navbar-brand" href="#">
                    <span class="glyphicon glyphicon glyphicon-tree-deciduous"></span>
                    Nest Js
                </a>
            </div>

        </div>
    </nav>

    <div class="container" id="app">
        <main>
            <div class="jumbotron">
                <h3>Comments</h3>
                <ul>
                    <!-- <% comments.forEach(function(comment) { %>
                        <li>
                            <%= comment.message %>
                        </li>
                        <% }); %> -->
                        <li v-for="comment in comments">
                            {{comment.message}}
                        </li>
                </ul>
            </div>
        </main>

        <div class="row">
            <div class="col-md-8">
                <form v-on:submit.prevent="submitComment()">
                    <div class="form-group">
                        <input type="text" class="form-control" name="message" v-model="comment.message" placeholder="Type your comments">
                    </div>

                    <div class="form-group">
                        <button class="btn btn-success" type="submit">Submit</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <script>
        new Vue({
            el: '#app',
            data() {
                return {
                    comments: [],
                    comment: {
                        message: ''
                    }
                }
            },
            created() {
                let pusher = new Pusher('e6c6d225b2ca71968dcc', {
                    cluster: 'eu',
                    encrypted: true
                });

                const channel = pusher.subscribe('comment');
                channel.bind('comment_data', data => {
                    this.comments.push(data);
                });
            },
            methods: {
                submitComment() {
                    console.log(this.comment)
                    axios.post('/comments', this.comment).then((data) => {
                        console.log(data)
                    })
                }
            }
        })
    </script>
</body>

</html>